DB정의(MySQL)

1) [피부타입]
CREATE TABLE SKINTYPE(
	SKINTYPE_ID INT PRIMARY KEY
);

2) [성별]
CREATE TABLE GENDER(
	GENDER_ID INT PRIMARY KEY
);

3) [연령]
CREATE TABLE AGE(
    AGE_ID INT PRIMARY KEY
);

4) [회원정보]
CREATE TABLE MEMBER(
MEM_ID VARCHAR(100) PRIMARY KEY,
MEM_PW VARCHAR(200) NOT NULL,
MEM_NAME VARCHAR(50) NOT NULL,
MEM_AGE INT NULL,
MEM_EMAIL VARCHAR(200) NOT NULL,
GENDER_ID INT NULL,
SKINTYPE_ID INT,
AGE_ID INT,
CONSTRAINT FK_MEMBER_GENDER_ID FOREIGN KEY(GENDER_ID) REFERENCES GENDER(GENDER_ID),
CONSTRAINT FK_MEMBER_SKINTYPE_ID FOREIGN KEY(SKINTYPE_ID) REFERENCES SKINTYPE(SKINTYPE_ID),
CONSTRAINT FK_MEMBER_AGE_ID FOREIGN KEY(AGE_ID) REFERENCES AGE(AGE_ID)
);

5) [제품정보] - 수정됨
CREATE TABLE ITEM(
    ITEM_ID INT PRIMARY KEY,
    ITEM_NAME VARCHAR(100) NOT NULL,
    ITEM_BRAND VARCHAR(100) NOT NULL,
    ITEM_CATEGORY VARCHAR(100) NOT NULL,
    AGE_ID INT,
    SKINTYPE_ID INT,
    GENDER_ID INT,
    CONSTRAINT FK_ITEM_AGE_ID FOREIGN KEY(AGE_ID) REFERENCES AGE(AGE_ID),
    CONSTRAINT FK_ITEM_SKINTYPE_ID FOREIGN KEY(SKINTYPE_ID) REFERENCES SKINTYPE(SKINTYPE_ID),
    CONSTRAINT FK_ITEM_GENDER_ID FOREIGN KEY(GENDER_ID) REFERENCES GENDER(GENDER_ID)
);

6) [리뷰정보]
CREATE TABLE REVIEW(
    REVIEW_ID INT AUTO_INCREMENT PRIMARY KEY,
    MEM_ID VARCHAR(100),
    REVIEW_TITLE VARCHAR(200) NOT NULL,
    REVIEW_CONTENT VARCHAR(4000) NOT NULL,
    ITEM_ID INT,
    REVIEW_LIKE INT NOT NULL,
    REVIEW_GRADE INT NOT NULL,
    CONSTRAINT FK_MEM_ID FOREIGN KEY(MEM_ID) REFERENCES MEMBER(MEM_ID),
    CONSTRAINT FK_ITEM_ID FOREIGN KEY(ITEM_ID) REFERENCES ITEM(ITEM_ID)
);

7) [좋아요 정보]
CREATE TABLE LIKED(
    LIKE_ID INT AUTO_INCREMENT PRIMARY KEY,
    REVIEW_ID INT,
    TARGET_MEM_ID VARCHAR(100),
    MEM_ID VARCHAR(100),
    CONSTRAINT FK_LIKE_REVIEW_ID FOREIGN KEY(REVIEW_ID) REFERENCES REVIEW(REVIEW_ID),
    CONSTRAINT FK_LIKE_TARGET_MEM_ID FOREIGN KEY(TARGET_MEM_ID) REFERENCES MEMBER(MEM_ID),
    CONSTRAINT FK_LIKE_MEM_ID FOREIGN KEY(MEM_ID) REFERENCES MEMBER(MEM_ID)
);

8) [찜목록]
CREATE TABLE SELECTED(
    SEL_ID INT AUTO_INCREMENT PRIMARY KEY,
    ITEM_ID INT,
    MEM_ID VARCHAR(100),
    CONSTRAINT FK_SELECTED_ITEM_ID FOREIGN KEY(ITEM_ID) REFERENCES ITEM(ITEM_ID),
    CONSTRAINT FK_SELECTED_MEM_ID FOREIGN KEY(MEM_ID) REFERENCES MEMBER(MEM_ID)
);

9) [팔로우]
CREATE TABLE FOLLOW(
    FOLLOW_ID INT AUTO_INCREMENT PRIMARY KEY,
    MEM_ID VARCHAR(100),
    TARGET_MEM_ID VARCHAR(100),
    CONSTRAINT FK_FOLLOW_MEM_ID FOREIGN KEY(MEM_ID) REFERENCES MEMBER(MEM_ID),
    CONSTRAINT FK_FOLLOW_TARGET_MEM_ID FOREIGN KEY(TARGET_MEM_ID) REFERENCES MEMBER(MEM_ID)
);


10)초기에 넣을 테이더 값
insert into skintype values(1);
insert into skintype values(2);
insert into skintype values(3);
insert into skintype values(4);
insert into skintype values(5);
insert into skintype values(6);

insert into gender values(1);
insert into gender values(2);

insert into age values(1);
insert into age values(2);
insert into age values(3);
insert into age values(4);
insert into age values(5);









