DB정의

1) [피부타입]
CREATE TABLE SKINTYPE(
SKINTYPE_ID NUMBER PRIMARY KEY
);


2) [성별]
CREATE TABLE GENDER(
GENDER_ID NUMBER PRIMARY KEY
);


3) [회원정보] - 수정됨
CREATE TABLE MEMBER(
MEM_ID VARCHAR2(100) PRIMARY KEY,
MEM_PW VARCHAR2(200) NOT NULL,
MEM_NAME VARCHAR2(50) NOT NULL,
MEM_AGE NUMBER NULL,
MEM_EMAIL VARCHAR2(200) NOT NULL,
GENDER_ID NUMBER NULL,
SKINTYPE_ID NUMBER,
AGE_ID NUMBER,
MEM_INFO VARCHAR2(100),
CONSTRAINT FK_MEMBER_GENDER_ID FOREIGN KEY(GENDER_ID) REFERENCES GENDER(GENDER_ID),
CONSTRAINT FK_MEMBER_SKINTYPE_ID FOREIGN KEY(SKINTYPE_ID) REFERENCES SKINTYPE(SKINTYPE_ID),
CONSTRAINT FK_MEMBER_AGE_ID FOREIGN KEY(AGE_ID) REFERENCES AGE(AGE_ID)
);


4) [연령]
CREATE TABLE AGE(
    AGE_ID NUMBER PRIMARY KEY
);


5) [제품정보] - 수정됨
CREATE TABLE ITEM(
    ITEM_ID NUMBER PRIMARY KEY,
    ITEM_NAME VARCHAR2(100) NOT NULL,
    ITEM_BRAND VARCHAR2(100) NOT NULL,
    ITEM_CATEGORY VARCHAR2(100) NOT NULL,
    AGE_ID NUMBER,
    SKINTYPE_ID NUMBER,
    GENDER_ID NUMBER,
    CONSTRAINT FK_ITEM_AGE_ID FOREIGN KEY(AGE_ID) REFERENCES AGE(AGE_ID),
    CONSTRAINT FK_ITEM_SKINTYPE_ID FOREIGN KEY(SKINTYPE_ID) REFERENCES SKINTYPE(SKINTYPE_ID),
    CONSTRAINT FK_ITEM_GENDER_ID FOREIGN KEY(GENDER_ID) REFERENCES GENDER(GENDER_ID)
);


6) [리뷰정보]
CREATE TABLE REVIEW(
    REVIEW_ID NUMBER PRIMARY KEY,
    MEM_ID VARCHAR2(100),
    REVIEW_TITLE VARCHAR2(200) NOT NULL,
    REVIEW_CONTENT VARCHAR2(4000) NOT NULL,
    ITEM_ID NUMBER,
    REVIEW_LIKE NUMBER NOT NULL,
    REVIEW_GRADE NUMBER NOT NULL,
    CONSTRAINT FK_MEM_ID FOREIGN KEY(MEM_ID) REFERENCES MEMBER(MEM_ID),
    CONSTRAINT FK_ITEM_ID FOREIGN KEY(ITEM_ID) REFERENCES ITEM(ITEM_ID)
);


7) [좋아요 정보]
CREATE TABLE LIKED(
    LIKE_ID NUMBER PRIMARY KEY,
    REVIEW_ID NUMBER,
    TARGET_MEM_ID VARCHAR2(100),
    MEM_ID VARCHAR2(100),
    CONSTRAINT FK_LIKE_REVIEW_ID FOREIGN KEY(REVIEW_ID) REFERENCES REVIEW(REVIEW_ID),
    CONSTRAINT FK_LIKE_TARGET_MEM_ID FOREIGN KEY(TARGET_MEM_ID) REFERENCES MEMBER(MEM_ID),
    CONSTRAINT FK_LIKE_MEM_ID FOREIGN KEY(MEM_ID) REFERENCES MEMBER(MEM_ID)
);

8) [리뷰 작성시 리뷰 아이디 Sequence]
CREATE SEQUENCE REVIEW_SEQ
    START WITH 1
    INCREMENT BY 1
;

9) [좋아요 클릭시 좋아요 아이디 Sequence]
CREATE SEQUENCE LIKED_SEQ
	START WITH 1
	INCREMENT BY 1
;

10) [찜목록]
CREATE TABLE SELECTED(
    SEL_ID NUMBER PRIMARY KEY,
    ITEM_ID NUMBER,
    MEM_ID VARCHAR2(100),
    CONSTRAINT FK_SELECTED_ITEM_ID FOREIGN KEY(ITEM_ID) REFERENCES ITEM(ITEM_ID),
    CONSTRAINT FK_SELECTED_MEM_ID FOREIGN KEY(MEM_ID) REFERENCES MEMBER(MEM_ID)
);

11) [찜목록 클릭시 찜목록 아이디 Sequence]
CREATE SEQUENCE SELECTED_SEQ
	START WITH 1
	INCREMENT BY 1
;

12) [팔로우 정보]
CREATE TABLE FOLLOW(
    FOLLOW_ID NUMBER PRIMARY KEY,
    MEM_ID VARCHAR2(100),
    TARGET_MEM_ID VARCHAR2(100),
    CONSTRAINT FK_FOLLOW_MEM_ID FOREIGN KEY(MEM_ID) REFERENCES MEMBER(MEM_ID),
    CONSTRAINT FK_FOLLOW_TARGET_MEM_ID FOREIGN KEY(TARGET_MEM_ID) REFERENCES MEMBER(MEM_ID)
);

13) [팔로우 아이디 Sequence]
CREATE SEQUENCE FOLLOW_SEQ
    START WITH 1
    INCREMENT BY 1
;











